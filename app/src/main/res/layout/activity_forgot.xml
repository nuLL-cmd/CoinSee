<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        tools:context=".View.LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:id="@+id/txtTitle_forgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif"
                android:text="Senha"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/str_resumo"
                android:layout_marginTop="20dp"
                android:textAlignment="textStart"
                android:layout_marginStart="5dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="SEU EMAIL:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtEmail_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_edt"
                android:singleLine="true"
                android:textColor="#A2A2A2"
                android:layout_marginTop="10dp"
                android:hint="example@gmail.com"
                android:paddingStart="20dp" />

            <Button
                android:id="@+id/btnSend_forgot"
                style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_btn_splash"
                android:text="Enviar"
                android:textColor="#fff"
                android:textSize="19sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="#E2E0E0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/automatodev"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:onClick="actRegisterLogin"
                    android:layout_marginStart="5dp"
                    android:gravity="center"/>


            </LinearLayout>
        </LinearLayout>




    </LinearLayout>
</ScrollView>
