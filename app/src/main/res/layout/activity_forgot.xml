<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        tools:context=".view.activity.LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imgBack_forgot"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignTop="@id/txtTitle_forgot"
                    android:layout_alignBottom="@id/txtTitle_forgot"
                    android:background="@drawable/bg_btn_back"
                    android:onClick="acForgotSplash"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_arrow_gray_32p" />


                <TextView
                    android:id="@+id/txtTitle_forgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imgBack_forgot"
                    android:layout_marginTop="40dp"
                    android:fontFamily="sans-serif"
                    android:text="Senha"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/str_resumo"
                android:layout_marginTop="20dp"
                android:textAlignment="textStart"
                android:layout_marginStart="5dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="SEU EMAIL:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtEmail_forgot"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_edt"
                android:singleLine="true"
                android:textColor="#A2A2A2"
                android:layout_marginTop="10dp"
                android:hint="example@gmail.com"
                android:paddingStart="20dp" />

            <Button
                android:id="@+id/btnSend_forgot"
                style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="sendEmail"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_btn_splash"
                android:text="Enviar"
                android:textColor="#fff"
                android:textSize="19sp" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
