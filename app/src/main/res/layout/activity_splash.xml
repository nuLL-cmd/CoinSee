<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".view.activity.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_img_splash"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo_splash"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_2" />

        <ImageView
            android:id="@+id/imgTitle_splash"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/coin_see_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/kavoon"
            android:text="Consultar a cotação\n de moedas estrangeiras ficou fácil!"
            android:textAlignment="center"

            />
                <Button
                    android:id="@+id/btnReg_splash"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:text="Registre-se"
                    android:textStyle="bold"
                    android:layout_marginStart="60dp"
                    android:onClick="actSplashRegister"
                    android:layout_marginEnd="60dp"
                    android:textColor="#FFF"
                    style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
                    android:background="@drawable/bg_btn_splash" />

                <Button
                    android:id="@+id/btnLogin_splash"
                    android:text="Login"
                    android:textStyle="bold"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="60dp"
                    android:onClick="actSplashLogin"
                    android:layout_marginBottom="20dp"
                    android:textColor="#FFF"
                    style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_btn_splash" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="bottom">

            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom"
                android:fontFamily="@font/kavoon"
                android:layout_height="wrap_content"
                android:text="automatoDev - 2020"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="#E2E0E0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imgLinkedin_splash2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:onClick="openLinkedin"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
                    android:src="@drawable/linkedin_gray_48" />

                <ImageView
                    android:id="@+id/imgFacebook_splash2"
                    android:layout_width="32dp"
                    android:layout_height
                        ="32dp"
                    android:layout_marginStart="20dp"
                    android:clickable="true"
                    android:onClick="openFacebook"
                    android:src="@drawable/face_gray_48" />


            </LinearLayout>
        </LinearLayout>





    </LinearLayout>

</LinearLayout>

