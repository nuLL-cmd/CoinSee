<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".view.activity.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_img_splash"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo_splash"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_2" />

        <ImageView
            android:id="@+id/imgTitle_splash"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/coin_see_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            app:cardElevation="6dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="6dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnReg_splash"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:text="Registre-se"
                    android:textStyle="bold"
                    android:layout_marginStart="60dp"
                    android:onClick="actSplashRegister"
                    android:layout_marginEnd="60dp"
                    android:textColor="#FFF"
                    style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
                    android:background="@drawable/bg_btn_splash" />

                <Button
                    android:id="@+id/btnLogin_splash"
                    android:text="Login"
                    android:textStyle="bold"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="60dp"
                    android:onClick="actSplashLogin"
                    android:layout_marginBottom="20dp"
                    android:textColor="#FFF"
                    style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_btn_splash" />

                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:text="automatoDev - 2020"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

</LinearLayout>

