<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".view.activity.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/bg_img_splash"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo_splash"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_2" />

        <ImageView
            android:id="@+id/imgTitle_splash"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/coin_see_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btnReg_splash"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Registre-se"
            android:textStyle="bold"
            android:layout_marginStart="60dp"
            android:onClick="actSplashRegister"
            android:layout_marginEnd="60dp"
            android:textColor="#FFF"
            style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
            android:background="@drawable/bg_btn_splash" />

        <Button
            android:id="@+id/btnLogin_splash"
            android:text="Login"
            android:textStyle="bold"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:onClick="actSplashLogin"
            android:textColor="#FFF"
            style="@style/Widget.AppCompat.ButtonBar.AlertDialog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn_splash" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgLinkedin_splash"
                android:layout_width="32dp"
                android:clickable="true"
                android:layout_height="32dp"
                android:src="@drawable/linkedin_blue_48"/>


            <ImageView
                android:id="@+id/imgFacebook_splash"
                android:layout_width="32dp"
                android:clickable="true"
                android:layout_height="32dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/face_blue_48"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

