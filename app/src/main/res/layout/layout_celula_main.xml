<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7dp"
    app:cardElevation="10dp"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtCoin_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dólar Comercial"/>


        <ImageView
            android:id="@+id/imgCoin_layout"
            android:layout_width="28dp"
            android:src="@drawable/usa"
            android:layout_below="@+id/txtCoin_layout"
            android:layout_marginTop="8dp"
            android:layout_height="28dp"/>

        <TextView
            android:id="@+id/txtCoinAB_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD"
            android:layout_toEndOf="@id/imgCoin_layout"
            android:layout_alignTop="@id/imgCoin_layout"
            android:layout_alignBottom="@id/imgCoin_layout"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/txtCoinValue_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="$4.39"
            android:textColor="#034885"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/txtCoin_layout"/>


        <TextView
            android:id="@+id/txtHigh_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="$4.41"
            android:layout_below="@id/imgCoin_layout"
            android:layout_marginTop="20sp"
            android:drawableStart="@drawable/ic_arrowup_4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Variação"
            android:layout_marginBottom="5dp"
            android:layout_above="@id/viewVar_layout"
            android:layout_alignStart="@id/viewVar_layout"
            android:layout_alignEnd="@id/viewVar_layout"
            android:textAlignment="center"/>

        <View
            android:id="@+id/viewVar_layout"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_alignBottom="@id/txtHigh_layout"
            android:background="#DBDBDB"
            android:layout_toStartOf="@id/txtLow_layout"
            android:layout_toEndOf="@id/txtHigh_layout"
            />

        <TextView
            android:id="@+id/txtLow_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="$4.28"
            android:layout_alignBottom="@id/txtHigh_layout"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/txtHigh_layout"
            android:drawableStart="@drawable/ic_arrowdown_24dp"/>

        <TextView
            android:id="@+id/txtDate_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-03-03"
            android:layout_below="@id/txtHigh_layout"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@id/txtHigh_layout"
            android:textAlignment="center"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/txtHour_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:48:00"
            android:layout_alignStart="@id/txtDate_layout"
            android:layout_below="@id/txtDate_layout"
            android:layout_marginTop="5dp"
            android:layout_alignEnd="@id/txtDate_layout"
            android:textAlignment="center"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/txtPercent_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.55%"
            android:layout_alignStart="@id/viewVar_layout"
            android:layout_below="@id/viewVar_layout"
            android:layout_marginTop="5dp"
            android:layout_alignEnd="@id/viewVar_layout"
            android:textAlignment="center" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>