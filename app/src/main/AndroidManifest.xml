<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.automatodev.coinSee">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".view.activity.ChartActivity"
            android:parentActivityName=".view.activity.ChartActivity">

        </activity>
        <activity
            android:name=".view.activity.DetailsActivity"
            android:parentActivityName=".view.activity.DetailsActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">

        </activity>
        <activity
            android:name=".view.activity.FavActivity"
            android:parentActivityName=".view.activity.FavActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">

        </activity>
        <activity
            android:name=".view.activity.ProfileActivity"
            android:parentActivityName=".view.activity.ProfileActivity"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".view.activity.ForgotActivity"
            android:parentActivityName=".view.activity.ForgotActivity"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.MainActivity"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".view.activity.RegisterActivity"
            android:parentActivityName=".view.activity.RegisterActivity"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.LoginActivity"
            android:parentActivityName=".view.activity.LoginActivity"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.SplashActivity"
            tools:ignore="LockedOrientationActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>