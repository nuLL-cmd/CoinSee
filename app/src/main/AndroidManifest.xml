<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.automatodev.coinsee">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".view.activity.DetailsActivity"
            android:parentActivityName=".view.activity.FavActivity">

        </activity>
        <activity
            android:name=".view.activity.FavActivity"
            android:parentActivityName=".view.activity.MainActivity">

        </activity>
        <activity
            android:name=".view.activity.ProfileActivity"
            android:parentActivityName=".view.activity.MainActivity">

        </activity>
        <activity android:name=".view.activity.ForgotActivity" />
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.RegisterActivity" />
        <activity android:name=".view.activity.LoginActivity" />
        <activity android:name=".view.activity.SplashActivity">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>